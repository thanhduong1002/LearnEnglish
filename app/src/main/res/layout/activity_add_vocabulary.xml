<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_15dp"
    tools:context=".ui.activities.AddVocabularyActivity">

    <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_15dp"
            android:text="@string/english" />

        <EditText
            android:id="@+id/editTextEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="english"
            android:hint="@string/enter_the_english_text_here"
            android:inputType="text"
            android:padding="@dimen/space_15dp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear01">

        <TextView
            android:id="@+id/textViewMeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_15dp"
            android:text="@string/vietnamese" />

        <EditText
            android:id="@+id/editTextMeaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="meaning"
            android:hint="@string/enter_the_meaning_here"
            android:inputType="text"
            android:padding="@dimen/space_15dp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear02">

        <TextView
            android:id="@+id/textViewPronunciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_15dp"
            android:text="@string/spelling" />

        <EditText
            android:id="@+id/editTextPronunciation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="pronunciation"
            android:hint="@string/enter_the_pronunciation_here"
            android:inputType="text"
            android:padding="@dimen/space_15dp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear03">

        <TextView
            android:id="@+id/textViewExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_15dp"
            android:text="@string/example" />

        <EditText
            android:id="@+id/editTextExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="example"
            android:hint="@string/enter_the_english_example_here"
            android:inputType="text"
            android:padding="@dimen/space_15dp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear04">

        <TextView
            android:id="@+id/textViewExampleTranslation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_15dp"
            android:text="@string/exampleTranslation" />

        <EditText
            android:id="@+id/editTextExampleTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="exampleTranslation"
            android:hint="@string/enter_the_translate_example_here"
            android:inputType="text"
            android:padding="@dimen/space_15dp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear05">

        <TextView
            android:id="@+id/textViewTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_15dp"
            android:text="@string/topic" />

        <Spinner
            android:id="@+id/spinnerEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonAddVocabulary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/add"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
